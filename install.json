
{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./app.js"
      }
    ]
  },
  "options": {
    "properties": {
      "map": {
        "order": 1,
        "title": "Enter the Map identifier from Mapjam",
        "type": "string",
        "default": "world"
      },
      "element": {
        "title": "Location",
        "description": "Where would you like the map to appear?",
        "order": 2,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "append"
        }
      },
      "showAdvanced": {
        "order": 3,
        "type": "boolean",
        "title": "Show advanced options",
        "default": false
      },
      "advanced": {
        "showIf": {
          "showAdvanced": true
        },
        "order": 4,
        "type": "object",
        "title": "Advanced options",
        "properties": {
          "zoom": {
            "title": "Custom Zoom",
            "type": "integer",
            "default": 15
          },
          "lat": {
            "title": "Custom Latitude",
            "type": "number"
          },
          "lng": {
            "title": "Custom Longitude",
            "type": "number"
          },
          "map_height": {
            "title": "Height",
            "type": "number"
          }
        }
      }
    }
  }
}
